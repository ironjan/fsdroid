<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="@dimen/elementMargin">

    <TextView
        android:id="@id/txtDescriptionMeeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/meetingDescription" />

    <TextView
        android:id="@id/txtMeetingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtDescriptionMeeting"
        android:layout_below="@id/txtDescriptionMeeting"
        android:textStyle="bold"
        tools:text="10.07.2013 18:00 in E1.312" />

</RelativeLayout>