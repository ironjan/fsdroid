<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="@dimen/elementMargin"
    >

    <TextView style="@style/NewsCategoryHeadline"
              android:id="@+id/newsHeadline"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/newsHeadline" />

    <include
        android:id="@+id/newsDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/newsHeadline"
        layout="@layout/contact_category_uderline" />


    <TextView
        android:id="@+id/newsText"
        android:textColor="@color/card_text"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/elementMargin"
        android:layout_height="wrap_content"
        android:text="Werden gerade geladen - sofern eine Internetverbindung verfÃ¼gbar ist ;)"
        android:layout_below="@+id/newsDivider" />

</RelativeLayout>