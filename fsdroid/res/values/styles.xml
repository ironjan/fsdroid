<resources>

    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar"></style>

    <style name="DrawerCategoryHeadline">
        <item name="android:textColor">@color/blueLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/elementMargin</item>
    </style>

    <style name="DrawerCategoryItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/touchable</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ContactCategoryHeadline">
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/elementMargin</item>
    </style>

    <style name="ContactCategoryItem">
        <item name="android:background">@drawable/touchable</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="BlueCardTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/blueLight</item>
    </style>

    <style name="BlackCardTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>