<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/itemCardMargin"
    android:paddingLeft="@dimen/itemCardMargin"
    android:paddingRight="@dimen/itemCardMargin"
    >
    <TextView
        android:id="@+id/title"
        style="@style/CardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/elementMarginHalf"
        android:layout_marginTop="@dimen/elementMarginHalf"
        android:background="@color/stroke"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        style="@style/CardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text" />

</LinearLayout><!-- From: file:/home/ljan/projects/fsdroid/src/main/res/layout/item_card.xml -->